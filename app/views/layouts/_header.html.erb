<div class="header">
  <div class="header__icon">
    <% if controller_name == 'budget_transactions' && action_name == 'new' %>
      <%= link_to category_budget_transactions_path do %>
        <i class="fa-solid fa-arrow-left icon" ></i>
      <% end %>
    <% else %>
      <%= link_to categories_path do %>
        <i class="fa-solid fa-arrow-left icon" ></i>
      <% end %>
    <% end %>
  </div>
  <div class="header__title">
    <%- if controller_name == 'sessions' %>
      <h2 class="title">LOGIN</h2>
    <%- elsif controller_name == 'registrations' %>
      <h2 class="title">SIGNUP</h2>
    <%- elsif controller_name == 'categories' && action_name == 'index' %>
      <h2 class="title">CATEGORIES</h2>
    <%- elsif controller_name == 'categories' && action_name == 'new' %>
      <h2 class="title">NEW CATEGORY</h2>
    <%- elsif controller_name == 'budget_transactions' && action_name == 'index' %>
      <h2 class="title">TRANSACTIONS</h2>
    <%- else %>
      <h2 class="title">NEW TRANSACTION</h2>
  <% end %>
  </div>
  <div class="header__nav" >
    <%- if controller_name == 'sessions' %>
      <%= link_to "Sign Up", new_user_registration_path, class: "session-nav" %>
    <%- elsif controller_name == 'registrations' %>
      <%= link_to "Login", new_user_session_path, class: "session-nav" %>
  <%- else %>
      <%= button_to raw(' <i class="fa-solid fa-right-from-bracket"></i>'), destroy_user_session_path, method: :delete, class: 'logout' %>
    <% end %>
  </div>
</div>
