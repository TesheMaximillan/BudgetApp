<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="form-group">
    <div class="form-group__field">
      <%= f.label :email, class: "hidden" %>
      <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email", placeholder: "Email", class: "form-group__field--input" %>
    </div>

    <div class="form-group__field">
      <%= f.label :password, class: "hidden" %>
      <%= f.password_field :password, autocomplete: "current-password", required: true, placeholder: "Password", class: "form-group__field--input" %>
    </div>

    <div class="form-group__login-options">
      <% if devise_mapping.rememberable? %>
        <div class="rememberable" >
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>

    <div class="form-group__actions">
      <%= f.submit "Log in", class: "submit-btn" %>
    </div>
  </div>
<% end %>

