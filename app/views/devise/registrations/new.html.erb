<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
  <div class="form-group">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-group__field">
      <div class="user-profile">
        <%= image_tag "https://cdn.icon-icons.com/icons2/1378/PNG/512/avatardefault_92824.png", class: "img" %>
        <p>Upload Picture</p>
      </div>
    </div>
    <div class="form-group__field">
      <%= f.label :name, class: "hidden" %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", required: true, placeholder: "Name", class: "form-group__field--input" %>
    </div>

    <div class="form-group__field">
      <%= f.label :email, class: "hidden" %>
      <%= f.email_field :email, autocomplete: "email", required: true, placeholder: "Email", class: "form-group__field--input" %>
    </div>

    <div class="form-group__field">
      <%= f.label :password, class: "hidden" %>
      <%= f.password_field :password, autocomplete: "new-password", required: true, placeholder: "Password", class: "form-group__field--input" %>
    </div>

    <div class="form-group__field">
      <%= f.label :password_confirmation, class: "hidden" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true, placeholder: "Password Confirmation", class: "form-group__field--input" %>
    </div>

    <div class="form-group__actions">
      <%= f.submit "Sign up", class: "submit-btn" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
